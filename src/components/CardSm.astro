---
interface Props {
  title: string;
  body: string;
  imgSrc: ImageMetadata;
  primaryHref: string;
  secondaryHref?: string;
  primaryBtnText: string;
  secondaryBtnText?: string;
}

import Image from 'astro/components/Image.astro';

const { title, body, imgSrc, primaryBtnText, secondaryBtnText, primaryHref, secondaryHref }: Props = Astro.props;
---


<div class="flex flex-col shadow-xl z-0 rounded-3xl overflow-hidden mx-5 mb-6">

    <Image src={imgSrc} alt={title} class='max-w-xs'></Image>

    <div class=" flex flex-col justify-center max-w-xs p-4">
        <h2 class="lg:text-2xl max-md:text-xl font-bold mb-2 font-poppins">{title}</h2>
        <p class="mb-6 font-poppins">{body}</p>
        <div class="flex space-x-2 justify-end mt-0">

            {(primaryBtnText&&primaryHref) ? <a href={primaryHref}>
                <button class="btn bg-secondary">{primaryBtnText}</button>
            </a> : null}

            {(secondaryBtnText&&secondaryHref) ? <a href={secondaryHref}>
                <button class="btn bg-primary">{secondaryBtnText}</button>
            </a> : null}

        </div>
    </div>
</div>