---
import Layout from "../layouts/Layout.astro"
import Image from "astro/components/Image.astro"
import logo from "../../public/img/LogoAutismoVeracruz.png";
---

<Layout title="Login">
    <main class="h-screen flex">
      <!-- Left side -->
      <div class="w-1/2 bg-primary flex items-center justify-center bg-detalles-fondo-md">
        <Image src={logo} alt="imagen del logo" class="w-3/4 h-auto"/>
      </div>
      <!-- Right side -->
      <div class="w-1/2 flex items-center justify-center shadow-2xl">
        <form class="w-full max-w-md bg-white p-8 rounded shadow-md">
          <h2 class="text-2xl font-bold mb-6 text-center">¡Bienvenido!</h2>
          <div class="mb-4">
            <div class="flex text-center items-center mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w- h-4 opacity-70"><path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" /></svg>
              <label class="block text-gray-700 text-sm font-bold" for="username">Usuario</label>
            </div>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Usuario">
          </div>
          
          <div class="mb-6">
            <div class="flex text-center items-center mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 opacity-70"><path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" /></svg>
              <label class="block text-gray-700 text-sm font-bold" for="password">Contraseña</label>
            </div>
            <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="Contraseña">
          </div>
          
          <div class="flex flex-col items-center justify-between ">
            <button type="submit" class="bg-secondary hover:bg-primary text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline btn-wide mb-4" type="button">Inicio de sesión</button>
            <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="recuperacion">¿Olvidaste tu contraseña?</a>
          </div>
        </form>
      </div>
    </main>
</Layout>
