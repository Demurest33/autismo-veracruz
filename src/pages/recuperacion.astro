---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Recuperar contraeña">
    <main class="h-screen w-screen bg-primary bg-detalles-fondo-lg bg-cover flex justify-center items-center">
        <form class="w-full max-w-md bg-white p-8 rounded shadow-md">
            <h2 class="text-2xl font-bold mb-6 text-center">Recuperar contraseña</h2>
            <div class="mb-4">
                <div class="flex text-center items-center mb-2">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 opacity-70">
                        <path d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
                        <path d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" /></svg>
                    <label class=" text-gray-700 text-sm font-bold" for="email">Correo</label>
                </div>
              <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" placeholder="Ingrese su correo">
            </div>
            <div class="flex items-center justify-between mb-4">
              <button class="bg-secondary hover:bg-primary text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">Resetear constraseña</button>
              <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="index.html">Regresar</a>
            </div>
        </form>
    </main>

</Layout>

